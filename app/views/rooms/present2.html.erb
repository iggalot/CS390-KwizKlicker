<script>
  var room_id = "<%= @room.id %>";
  var curnames = <%== @room.student_infos.map{ |s| s.name}.to_json %>;

  setInterval(function() {
    $.get('/api/student_info/' + room_id, function(data) {
        var names = data.map(function (x) {
            return x.name;
        });

        for(var old of curnames) {
          if(names.indexOf(old) < 0)
              event(old + " was kicked!");
        }

        for(var newn of names) {
            if(curnames.indexOf(newn) < 0) {
                event(newn + " has joined!")
            }
        }

        document.getElementById("theusers").innerHTML = names.join(", ");
        curnames = names;
    });
  }, 400);
</script>

    <%end%>

</html>
