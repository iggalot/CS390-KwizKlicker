<html>
  <head>
<style type="text/css">  
  html { height: 100% }  
  body { height: 100%; margin: 0; padding: 0 }  
  #map_canvas { height: 100% }   
</style> 

<%= stylesheet_link_tag 'application' %>
  </head>
  
<h1>New Room</h1>

<%= form_with scope: :room, url: rooms_path, local: true do |form| %>

<% if @room.errors.any? %>
<div id="error_explanation">
	<h2>
		<%= pluralize(@room.errors.count, "error") %>
		prevented you from making this room:
	</h2>
	<ul>
	<% @room.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>
</div>
<% end %>

<p>
	<%= form.label "name" %><br>
	<%= form.text_field :name, placeholder: "Put your room name here" %>
</p>

<p>
	<%= form.label 'Description' %><br>
	<%= form.text_field :description, placeholder: "What is your room for?" %>
</p>


<p>
	<%= form.submit "Create Room", :class => "button"%>
</p>

<% end %>
 </body>
</html>
