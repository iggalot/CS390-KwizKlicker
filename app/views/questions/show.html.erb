<p>
  <strong>Question</strong>
  <%= @question.body %>
</p>
<br>



<%= form_for([@room, @question, @question.answers.build]) do |form| %>
    <p>
      <%= form.label :answers %><br>
      <%= form.text_field :text %>
    </p>

    <p>
      <%= form.submit "Create Answer", :class => "button" %>
    </p>

<% end %>




<p>
<ol>
  <% @question.answers.each.with_index do |each, idx| %>
      <% if each.nil? or each.text.nil? %> <!-- todo -->
          <% next %>
      <% end %>
      <li class="answer">
        <%= each.text %>
        <%= link_to 'Delete', [each.question.room, @question, each], method: :delete, data: {confirm: 'Are you sure?'}, :class => "button" %>
      </li>
  <% end %>
</ol>
</p>

<br><br><br>
<p>
  <%= link_to 'Back', room_path(@room), :class => "button2" %>
</p>

